    },
    "homepage": "https://github.com/blateral/b.kit#readme",
    "husky": {
        "hooks": {
            "pre-push": "yarn tc && yarn deploy-storybook"
        }
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
